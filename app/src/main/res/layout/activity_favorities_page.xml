<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/bg"
                android:clickable="false"
                tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:weightSum="400.0">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight="35"
            android:background="#ffbe2c"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="6"
            android:singleLine="false"
            android:text=" Favorites Page"
            android:textColor="@color/light_font"
            android:textSize="25sp"
            android:gravity="center_vertical"
            android:textStyle="bold"/>
        <View
            android:id="@+id/devider11"
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight="2"
            android:background="#000000"/>
        <GridView
            android:id="@+id/gridView1"
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight="308"
            android:background="#000000"
            android:clickable="false"
            android:horizontalSpacing="4dp"
            android:numColumns="3"
            android:verticalSpacing="4dp">

        </GridView>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="20"
            android:background="#000000">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:src="@drawable/online2"/>

            <TextView
                android:id="@+id/online"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-8dp"
                android:layout_marginTop="5dp"
                android:background="#000000"
                android:text="Online"
                android:textColor="#ffffff"
                android:textSize="10dp"/>

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/gps_acuuraty"/>

            <TextView
                android:id="@+id/distanceAcuuraty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="#000000"
                android:text="15m"
                android:textColor="#ffffff"
                android:textSize="10dp"/>

        </TableRow>

        <TextView
            android:id="@+id/editText"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="35"
            android:background="#000000"
            android:gravity="center_vertical|center_horizontal"
            android:paddingBottom="15dp"
            android:shadowColor="#FFFFFFFF"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="15"
            android:text="Mipo"
            android:textColor="#ffbe2c"
            android:textSize="30dp"
            android:textStyle="bold">
        </TextView>


    </LinearLayout>


</RelativeLayout>