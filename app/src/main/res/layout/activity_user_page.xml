<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                tools:context="com.example.mipo.UserPage">

    <ImageView
        android:id="@+id/usrPage_image"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:focusable="false"
        android:scaleType="fitXY"
        android:src="@drawable/pic2"/>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignBottom="@+id/usrPage_image"
        android:layout_alignParentStart="true"
        android:background="#88000000">

        <TextView
            android:id="@+id/name_profile"
            android:layout_width="260dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Alexandra.W , 28"
            android:textColor="#fffdfd"
            android:textSize="23sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/seen_profile"
            android:layout_width="120dp"
            android:layout_height="22dp"
            android:layout_alignEnd="@+id/name_profile"
            android:layout_alignStart="@+id/name_profile"
            android:layout_below="@+id/name_profile"
            android:text="Seen 19 min ago | 189 meters away"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <ImageButton
            android:id="@+id/detailed_profile_button"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/seen_profile"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/name_profile"
            android:layout_marginRight="15dp"
            android:background="@drawable/three_p"/>

    </RelativeLayout>

    <ImageButton
        android:id="@+id/favorite_main_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignEnd="@+id/usrPage_image"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/favorite"/>

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignEnd="@+id/usrPage_image"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/report"/>

    <ImageButton
        android:id="@+id/message_button"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_above="@+id/relativeLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:background="@drawable/message"
        android:onClick="messaging"/>

</RelativeLayout>
